{% extends 'mails/requests/base.html.twig' %}

{% block body %}
	<tr>
		<td colspan="2" style="font-family: 'ubuntu', sans-serif; text-align:center;padding:15px;font-size:18px;">Vous avez reçu des réponses !</td>
	</tr>
	<tr>
		<td colspan="2" style="font-family: 'ubuntu', sans-serif;text-align:left;padding:15px;">
			Bonjour
			<b>{{ prenom }}
				{{ nom }}</b>,
			<br><br>
			Voici la liste des personnes ayant postulées à votre demande :
			<br>
			{% for user in users %}
				-
				<b>{{ user.surname }}
					{{ user.name }}</b><br>
			{% endfor %}
		</td>
	</tr>
	<tr>
		<td colspan="2" style="text-align:left;font-size:18px;padding:15px;">
			Vous pouvez accéder au détail de leur profil en vous connectant sur le back office :
		</td>
	</tr>
	<tr>
		<td colspan="2" style="vertical-align:middle;padding:15px;text-align:center;font-family: 'ubuntu', sans-serif;">
			<a href="{{ url('app_user_requets_installation') }}" style="background-color:#5d5d5d;border:2px solid #6b6b6b;border-radius: 3px;font-family: 'ubuntu', sans-serif;line-height: normal;margin:auto;padding:5px 10px 7px;vertical-align: middle;color: #FFF;width:300px;height:45px;font-size:18px;font-weight:normal;cursor:pointer;display:block;text-decoration:none;line-height:50px;">
				Accéder à mon tableau de bord
			</a>
		</td>
	</tr>
{% endblock %}
