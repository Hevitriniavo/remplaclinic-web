{% extends 'mails/base.html.twig' %}

{% block body %}
<tr>
	<td colspan="2" style="font-family: 'ubuntu', sans-serif; text-align:center;padding:15px;font-size:18px;">Notification demandes de remplacement archivées</td>
</tr>
<tr>
	<td colspan="2" style="font-family: 'ubuntu', sans-serif;text-align:left;padding:15px;">
		Voici la liste des demandes de remplacement archivées :
		<br><br>
		{% for request in requests %}
			ID de la demande : {{ request.id }}<br>
			<a href="{{ url('app_admin_request_replacement_show', { id: request.id }) }}">-> {{ request.title }}</a><br><br>
		{% endfor %}
	</td>
</tr>
<tr>
	<td style="vertical-align:middle;padding:15px;text-align:center;font-family: 'ubuntu', sans-serif;" colspan="2">
		<a href="{{ url('app_admin_request_replacement') }}" style="background-color:#5d5d5d;
						border:2px solid #6b6b6b;
						border-radius: 3px;
						font-family: 'ubuntu', sans-serif;
						line-height: normal;
						margin:auto;
						padding:5px 10px 7px;
						vertical-align: middle;
						color: #FFF;
						width:300px;
						height:45px;
						font-size:18px;
						font-weight:normal;
						cursor:pointer;
						display:block;
						text-decoration:none;
						line-height:50px;">Accéder au tableau de bord</a>
		</a>
	</td>
</tr>
{% endblock %}