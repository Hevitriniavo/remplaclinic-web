{% extends 'mails/base.html.twig' %}

{% block body %}
<tr>
	<td colspan="2" style="font-family: 'ubuntu', sans-serif; text-align:center;padding:15px;font-size:18px;">Notification nouvelle réponse demande de remplaçement</td>
</tr>
<tr>
	<td colspan="2" style="font-family: 'ubuntu', sans-serif;text-align:left;padding:15px;">
		Bonjour,
		<br><br>
		Une réponse à la <b>demande de remplaçement</b> en <b>{{ specialite_demande }}</b> de <b>{{ nom_demandeur }}</b> situé à <b>{{ ville_demandeur }}</b> vient d'arriver sur le site Remplaclinic.
		<br><br>
		<span style="text-decoration:underline">Dates de la demande :</span>
		<br>
			- du <b>{{ date_debut_demande }}</b> au <b>{{ date_fin_demande }}</b> inclus
		<br><br>'
		<span style="text-decoration:underline">Précisions sur la demande :</span>
		<br>
			{{ commentaires_demande|raw }}
		<br><br>
		<span style="text-decoration:underline">Sous-spécialités :</span>
		<br><b>
		{% for sp in specialites %}
		- {{ sp.name }}<br>
		{% endfor %}
		</b><br><br>
		<span style="text-decoration:underline">Informations sur le candidat :</span>
		<br><b>
		{{ prenom ~ ' ' ~ nom }}
		<br>
		{{ mail }}
		<br>
		{{ tel_fixe }}
		<br>
		{{ tel_port}}
		</b>
	</td>
</tr>
<tr>
	<td style="vertical-align:middle;padding:15px;text-align:center;font-family: 'ubuntu', sans-serif;" colspan="2">
		<a href="{{ url('app_admin_request_replacement_show', { id: request_id }) }}" style="background-color:#5d5d5d;
						border:2px solid #6b6b6b;
						border-radius: 3px;
						font-family: 'ubuntu', sans-serif;
						line-height: normal;
						margin:auto;
						padding:5px 10px 7px;
						vertical-align: middle;
						color: #FFF;
						width:300px;
						height:45px;
						font-size:18px;
						font-weight:normal;
						cursor:pointer;
						display:block;
						text-decoration:none;
						line-height:50px;">Accéder au détail de la demande</a>
	</td>
</tr>
{% endblock %}
