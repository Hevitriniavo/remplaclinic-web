<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('images/favicon_0.ico') }}" type="image/vnd.microsoft.icon">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="{% if is_granted('ROLE_ADMIN') and not (app.request.pathinfo starts with '/admin') %} pt-14 {% endif %} {% if cookie_consent() is null %} pb-16 {% endif %}">
        {% if is_granted('ROLE_ADMIN') and not (app.request.pathinfo starts with '/admin') %}
            {% include 'partials/admin_banner.html.twig' %}
        {% endif %}

        {% include 'partials/navigation.html.twig' %}
        {% block body %}

        {% endblock %}
        {% include 'partials/footer.html.twig' %}

        <div>
            <div id="rempla-toaster-root" class="fixed top-5 right-5 z-50 flex flex-col gap-2"></div>
        </div>
        {% if cookie_consent() is null %}
            {% include 'cookie-consent/_banner.html.twig' %}
        {% endif %}
        {% block bodyjs %}{% endblock %}
    </body>
</html>
