<div class="modal fade" id="filtre-user-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-secondary">
                <h4 class="modal-title">Filtre</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Annuler">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="filtre-user-civility">Civilité</label>
                            <select id="filtre-user-civility" class="form-control filtre-user-element" name="civility">
                                <option value="" selected>- Tous -</option>
                                <option value="M">Monsieur</option>
                                <option value="Mme">Madame</option>
                                <option value="Mlle">Mademoiselle</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="filtre-user-status">Statut</label>
                            <select id="filtre-user-status" class="form-control filtre-user-element" name="status">
                                <option value="" selected>- Tous-</option>
                                <option value="1">Actif</option>
                                <option value="0">Bloqué</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="filtre-user-speciality">Service</label>
                            <twig:SelectSpeciality class="form-control select2-input filtre-user-element" id="filtre-user-speciality" name="specialities" multiple="true">
                                <option></option>
                            </twig:SelectSpeciality>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="filtre-user-directeur">Directeur</label>
                            <select data-director-url="{{ path('api_user_liste_select') }}" class="form-control filtre-user-element" id="filtre-user-directeur" name="director" multiple="true">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label for="filtre-user-installation-count-min">Installation restante</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control filtre-user-element" id="filtre-user-installation-count-min" name="installation_count_min" placeholder="Min.">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control filtre-user-element" id="filtre-user-installation-count-max" name="installation_count_max" placeholder="Max.">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <label for="filtre-user-created-from-input">Date inscription</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <div class="input-group date datepicker-wrapper" id="filtre-user-created-from" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input filtre-user-element" data-target="#filtre-user-created-from" id="filtre-user-created-from-input" name="created_from" placeholder="De">
                                        <div class="input-group-append" data-target="#filtre-user-created-from" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <div class="input-group date datepicker-wrapper" id="filtre-user-created-to" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input filtre-user-element" data-target="#filtre-user-created-to" id="filtre-user-created-to-input" name="created_to" placeholder="A">
                                        <div class="input-group-append" data-target="#filtre-user-created-to" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <label for="filtre-user-abonnement-from-input">Fin abonnement</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <div class="input-group date datepicker-wrapper" id="filtre-user-abonnement-from" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input filtre-user-element" data-target="#filtre-user-abonnement-from" id="filtre-user-abonnement-from-input" name="abonnement_from" placeholder="De">
                                        <div class="input-group-append" data-target="#filtre-user-abonnement-from" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <div class="input-group date datepicker-wrapper" id="filtre-user-abonnement-to" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input filtre-user-element" data-target="#filtre-user-abonnement-to" id="filtre-user-abonnement-to-input" name="abonnement_to" placeholder="A">
                                        <div class="input-group-append" data-target="#filtre-user-abonnement-to" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="btn btn-default btn-flat" id="filtre-user-reset">
                    <i class="fas fa-times"></i> Effacer
                </button>
                <button type="button" class="btn btn-secondary btn-flat" id="filtre-user-validate">
                    <i class="fas fa-filter"></i> Valider
                </button>
            </div>
        </div>
    </div>
</div>