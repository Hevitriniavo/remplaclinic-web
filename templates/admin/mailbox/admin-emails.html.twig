{% extends 'admin-datatable.html.twig' %}

{% block title %}
Remplaclinic :: Admin :: Admin Emails
{% endblock %}

{% block page_title %}
    Admin Emails
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('admin/plugins/select2/css/select2.min.css') }}">
  <link rel="stylesheet" href="{{ asset('admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css') }}">
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-12">
                                <a class="btn btn-secondary btn-flat" id="btn-admin-email-new"
                                    data-url="{{ path('api_admin_email_new') }}">
                                    <i class="fas fa-plus"></i> Ajouter un email
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table id="tbl-admin-emails" class="table table-hover"
                                    data-url="{{ path('api_admin_email_get') }}"
                                    data-delete-url="{{ path('api_admin_email_delete', {id: '0000000000'}) }}"
                                    data-detail-url="{{ path('api_admin_email_detail', {id: '0000000000'}) }}"
                                    data-edit-url="{{ path('api_admin_email_update', {id: '0000000000'}) }}"
                                    data-image-url="{{ asset('uploads') }}">
                                    <thead>
                                        <tr>
                                            <th>#ID</th>
                                            <th>#Nom</th>
                                            <th>#Email</th>
                                            <th>#Events</th>
                                            <th>#Statut</th>
                                            <th>#</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="modal fade" id="admin-email-modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-secondary">
                                <h4 class="modal-title">DÃ©tail d'un email administrateur</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Annuler">
                                    <span aria-hidden="true" class="text-white">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="admin-email-form-detail" class="needs-validation" novalidate>
                                    <div class="form-group">
                                        <label for="admin-email-name">Nom</label>
                                        <input type="text" class="form-control" id="admin-email-name" required name="name">
                                        <div class="invalid-feedback">
                                            Un email doit avoir un nom
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="admin-email-email">Email</label>
                                        <input type="text" class="form-control" id="admin-email-email" required name="email">
                                        <div class="invalid-feedback">
                                            Un email doit etre preciser
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Evenements</label>
                                        <twig:SelectEmailEvents class="form-control" name="events" id="admin-email-events" multiple="true">
                                            <option></option>
                                        </twig:SelectEmailEvents>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input custom-control-input-secondary" type="checkbox" id="admin-email-status" name="status">
                                            <label for="admin-email-status" class="custom-control-label">Statut</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">
                                    <i class="fas fa-times"></i> Annuler
                                </button>
                                <button type="button" class="btn btn-secondary btn-flat" id="btn-admin-email-detail-save">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block bodyjs %}
{{ parent() }}
<script src="{{ asset('admin/plugins/select2/js/select2.full.min.js') }}"></script>
<script src="{{ versioned_asset('admin/custom/js/admin-emails.js') }}"></script>
{% endblock %}