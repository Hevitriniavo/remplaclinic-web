<div class="row">
    <div class="col-12">
        <div
            class="modal fade"
            id="select-user-modal"
            data-ids-url="{{ path('api_request_personne_contacte_ids') }}"
        >
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header bg-secondary">
                        <h4 class="modal-title">Choix des remplaçants a contacter</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Annuler">
                            <span aria-hidden="true" class="text-white">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12">
                                Sélectionner les remplaçants qui ont la meme
                            </div>
                            <div class="col-12 mb-3 pl-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="select-user-speciality" value="0">
                                    <label class="form-check-label" for="select-user-speciality">
                                        Spécialité
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="select-user-sous-speciality" value="0">
                                    <label class="form-check-label" for="select-user-sous-speciality">
                                        Sous spécialité
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="select-user-mobility" value="0">
                                    <label class="form-check-label" for="select-user-mobility">
                                        Mobilité
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="select-user-or" value="0">
                                    <label class="form-check-label" for="select-user-or">
                                        Une des conditions precedentes (OU)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12 text-bold">
                                <span id="select-user-count">0</span> remplaçants choisis.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <table
                                    id="tbl-select-users"
                                    class="table table-hover"
                                    data-list-url="{{ path('api_request_personne_contacte_all') }}"
                                    style="width: 100%;"
                                >
                                    <thead>
                                        <tr>
                                            <th>
                                                <div>
                                                    <input type="checkbox" value="tout" class="select-user-checkbox" id="select-user-tout" title="Mode selection tout">
                                                </div>
                                            </th>
                                            <th>#Nom</th>
                                            <th>#Prénom</th>
                                            <th>#Spécialité</th>
                                            <th>#Mobilité</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">
                            <i class="fas fa-times"></i> Annuler
                        </button>
                        <button
                            type="button"
                            class="btn btn-secondary btn-flat"
                            id="btn-select-user-save"
                            data-request-url="{{ path('api_request_personne_contacte_add', {requestId: '0000000000'}) }}"
                        >
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>