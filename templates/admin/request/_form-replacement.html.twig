<div class="row" id="root">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Informations sur la demande</h1>
            </div>
            <div
                class="card-body"
                ref="formEl"
                data-url="{{ path('api_request_replacement_new') }}"
                data-applicant-url="{{ path('api_user_liste_select') }}"
            >
                <div class="row justify-content-center">
                    <div class="col-10">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="request-applicant">Demandeur *</label>
                                    <select
                                        class="form-control"
                                        id="request-applicant"
                                        v-model="requestData.applicant"
                                    >
                                        <option></option>
                                    </select>
                                    <div class="text-danger" v-if="getErrorClass('applicant') === 'is-invalid'">Choisir
                                        un demandeur</div>
                                </div>
                                <div class="form-group">
                                    <label for="request-speciality">Spécialité *</label>
                                    <twig:SelectSpeciality class="form-control select2-input" id="request-speciality"
                                        v-model="requestData.speciality">
                                        <option></option>
                                    </twig:SelectSpeciality>
                                    <div class="text-danger" v-if="getErrorClass('speciality') === 'is-invalid'">Choisir
                                        une spécialité</div>
                                </div>
                                <div class="form-group">
                                    <label for="request-region">Mobilité *</label>
                                    <twig:SelectRegion class="form-control select2-input" id="request-region"
                                        v-model="requestData.region">
                                        <option></option>
                                    </twig:SelectRegion>
                                    <div class="text-danger" v-if="getErrorClass('region') === 'is-invalid'">Choisir une
                                        région</div>
                                </div>
                                <div class="form-group">
                                    <label for="request-positionCount">Nombre de postes *</label>
                                    <input type="number" class="form-control" id="request-positionCount"
                                        v-model="requestData.positionCount" :class="getErrorClass('positionCount')">
                                </div>
                            </div>
                            <div class="col-6 pl-5">
                                <div class="form-group">
                                    <label for="request-remuneration">Rémunération indicative (€ par
                                        jour)</label>
                                    <input type="text" class="form-control" id="request-remuneration"
                                        v-model="requestData.remuneration" :class="getErrorClass('remuneration')">
                                </div>
                                <div class="form-group">
                                    <label for="request-retrocession">Ou Rétrocession indicative (en %)</label>
                                    <input type="text" class="form-control" id="request-retrocession"
                                        v-model="requestData.retrocession" :class="getErrorClass('remuneration')">
                                </div>
                                <div class="form-group mt-3">
                                    <label for="request-started-at">Date de début inclus *</label>
                                    <div class="input-group date" id="request-started-at" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input"
                                            data-target="#request-started-at" id="request-started-at-input"
                                            v-model="requestData.startedAt" />
                                        <div class="input-group-append" data-target="#request-started-at"
                                            data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                    <div class="text-danger" v-if="getErrorClass('startedAt') === 'is-invalid'">Choisir
                                        une date</div>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="request-end-at">Date de fin inclus *</label>
                                    <div class="input-group date" id="request-end-at" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input"
                                            data-target="#request-end-at" id="request-end-at-input"
                                            v-model="requestData.endAt" />
                                        <div class="input-group-append" data-target="#request-end-at"
                                            data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                    <div class="text-danger" v-if="getErrorClass('endAt') === 'is-invalid'">Choisir une
                                        date</div>
                                </div>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-6">
                                <div>
                                    <label>Type de remplacement</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio"
                                        id="request-type-ponctuel" value="ponctual"
                                        v-model="requestData.replacementType">
                                    <label class="form-check-label" for="request-type-ponctuel">
                                        Ponctuel
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio"
                                        id="request-type-regular" value="regular" v-model="requestData.replacementType">
                                    <label class="form-check-label" for="request-type-regular">
                                        Régulier
                                    </label>
                                </div>
                                <div v-if="getErrorClass('replacementType') === 'is-invalid'" class="text-danger">
                                    Choisir un type de remplaçement
                                </div>
                            </div>
                            <div class="col-6 pl-5">
                                <div class="row">
                                    <div class="col-6">
                                        <div>
                                            <label>Logement inclus possible</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-accomodation-included-yes" value="1"
                                                v-model="requestData.accomodationIncluded">
                                            <label class="form-check-label" for="request-accomodation-included-yes">
                                                Oui
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-accomodation-included-no" value="0"
                                                v-model="requestData.accomodationIncluded">
                                            <label class="form-check-label" for="request-accomodation-included-no">
                                                Non
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-accomodation-included-discussed" value="2"
                                                v-model="requestData.accomodationIncluded">
                                            <label class="form-check-label"
                                                for="request-accomodation-included-discussed">
                                                À débattre
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div>
                                            <label>Remboursement frais de transport</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-transport-included-yes" value="1"
                                                v-model="requestData.transportCostRefunded">
                                            <label class="form-check-label" for="request-transport-included-yes">
                                                Oui
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-transport-included-no" value="0"
                                                v-model="requestData.transportCostRefunded">
                                            <label class="form-check-label" for="request-transport-included-no">
                                                Non
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"
                                                id="request-transport-included-discussed" value="2"
                                                v-model="requestData.transportCostRefunded">
                                            <label class="form-check-label" for="request-transport-included-discussed">
                                                À débattre
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="request-comment">Commentaire</label>
                                    <textarea class="form-control editor" id="request-comment" rows="10"
                                        v-model="requestData.comment"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="button" class="btn btn-secondary btn-flat" id="btn-request-save"
                                    v-on:click="onCreateRequest">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>