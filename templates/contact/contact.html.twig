{% extends 'base.html.twig' %}

{% block title %}
     contact | Remplaclinic
{% endblock %}

{% block body %}
    <div class="flex flex-col justify-between items-start p-20 gap-6">
        <h1 class="blue-span text-3xl">Contact</h1>
        <div class="flex flex-row justify-between text-color gap-[30em]">
            <div class="flex flex-col gap-7">
                <div class="flex flex-col gap-5">
                    <div class="flex flex-col gap-5">
                        <h2 class="text-xl uppercase"><strong>Ouvrir un compte</strong></h2>
                        <div class="w-24 h-1 bg-blue"></div>
                    </div>
                    <form class="flex flex-col items-center gap-5">
                        <div class="w-96 flex flex-row justify-between">
                            <label for="edit-submitted-nom">
                                Nom
                                <span class="form-required" title="This field is required">*</span>
                            </label>
                            <input
                                    type="text"
                                    class="form-text p-1 w-72 outline-none"
                                    id="edit-submitted-nom"
                            />
                        </div>
                        <div class="w-96 flex flex-row justify-between" id="webform-component-prenom">
                            <label for="lastname">Prénom </label>
                            <input
                                    id="lastname"
                                    name="lastname"
                                    type="text"
                                    class="form-text p-1 w-72 outline-none"
                            />
                        </div>
                        <div class="w-96 flex flex-row justify-between">
                            <label for="edit-submitted-email">
                                Email
                                <span class="form-required" title="This field is required">*</span>
                            </label>
                            <input
                                    id="edit-submitted-email"
                                    name="email"
                                    type="text"
                                    class="form-text p-1 w-72 outline-none"
                            />
                        </div>
                        <div class="w-96 flex flex-row justify-between">
                            <label for="edit-submitted-telephone">Téléphone </label>
                            <input
                                    id="edit-submitted-telephone"
                                    name="phoneNumber"
                                    type="text"
                                    class="form-text p-1 w-72 outline-none"
                            />
                        </div>
                        <div class="w-96 flex flex-row justify-between">
                            <label for="edit-submitted-message" class="flex flex-row gap-2">
                                Message <span class="form-required">*</span>
                            </label>
                            <div>
                                <textarea
                                        id="edit-submitted-message"
                                        name="message"
                                        class="form-text w-72 h-20 outline-none p-2"
                                ></textarea>
                                <div class="grippie"></div>
                            </div>
                        </div>
                        <div class="w-full flex justify-end pt-7">
                            <input
                                    type="submit"
                                    value="Envoyer"
                                    class="form-submit pl-3 pr-3 p-1 text-xl text-white"
                            />
                        </div>
                    </form>
                </div>
            </div>
            {{ render(controller('App\\Controller\\PartialController::index')) }}
        </div>
    </div>
{% endblock %}
