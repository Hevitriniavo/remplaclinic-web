{% extends 'base.html.twig' %}

{% block title %}
Annonce medicale : Remplaclinic : Remplacement médical, médecin remplaçant
{% endblock %}

{% block body %}
<div>
    <section class="flex flex-row gap-20 px-16 py-4 custom-bg-slide h-[340px] overflow-y-hidden">
        <div class="w-[1170px] mx-auto">
            <div class="w-[780px] float-left flex flex-row">
                <div>
                    <ul class="flex flex-col gap-0 bg-[#68b8dc]">
                        <li class="w-[220px] h-[75px]">
                            <a href="/"
                                class="flex flex-col delay-50 transition duration-300 views-slideshow-pager-field-item bg-orange-fleche justify-center px-6 hover:pl-12 group">
                                <span class="text-[#9e9e9e] group-hover:text-white">Je suis une</span>
                                <span class="text-[16px] text-[#666666]">clinique</span>
                            </a>
                        </li>
                        <li class="w-[220px] h-[75px]">
                            <a href="/"
                                class="flex flex-col delay-50 transition views-slideshow-pager-field-item duration-100 bg-orange-fleche justify-center hover:items-start px-6 hover:pl-12 group">
                                <span class="text-[#9e9e9e] group-hover:text-white">Je suis une</span>
                                <span class="text-[16px] text-[#666666]">cabinet médical</span>
                            </a>
                        </li>
                        <li class="w-[220px] h-[75px]">
                            <a href="/"
                                class="flex flex-col delay-50 transition views-slideshow-pager-field-item duration-100 bg-orange-fleche justify-center hover:items-start px-6 hover:pl-12 group">
                                <span class="text-[#9e9e9e] group-hover:text-white">Je suis une</span>
                                <span class="text-[16px] text-[#666666]">remplaçant</span>
                            </a>
                        </li>
                        <li class="w-[220px] h-[75px]">
                            <a href="/"
                                class="flex flex-col delay-50 transition views-slideshow-pager-field-item duration-100 bg-orange-fleche justify-center hover:items-start px-6 hover:pl-12 group">
                                <span class="text-[#9e9e9e] group-hover:text-white">Je recherche une</span>
                                <span class="text-[16px] text-[#666666]">installation</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="relative">
                    <img src="{{ asset('images/sliders/cabinet_0_0.png') }}" width="560"
                        alt="Image d'un cabinet médical" class="w-[560px] h-[300px]" />
                    <div class="absolute inset-0 flex flex-col gap-4 leading-normal text-black px-10 py-14">
                        <h2 class="text-[22px] ">
                            <span class="text-[#68b8dc]">Un congé, une absence ?</span>
                        </h2>
                        <p class="mt-2 text-[14px]">Trouvez le bon médecin remplaçant.</p>
                    </div>
                    <div class="absolute top-[260px] left-[420px]">
                        <a href="{{ path('app_replacement_search') }}" class="en-savoir-plus">
                            En savoir plus
                        </a>
                    </div>
                </div>
            </div>
            <div class="customer-bg-fleches float-left">
                <div class="text-center mb-5">
                    <span class="text-[28px] font-bold text-white">7872</span>
                    <span class="text-[20px] text-white">remplaçants</span>
                    <p class="text-[18px] text-white font-bold mb-[19px]">disponibles immédiatement</p>
                </div>
                <div>
                    <form class="space-y-4 mt-5">
                        <div class="flex items-center justify-center">
                            <label class="w-full">
                                <twig:SelectRegion class="w-full p-2 border border-gray-300 rounded-md bg-white text-base outline-none">
                                    <option value="All" selected="selected">Région</option>
                                </twig:SelectRegion>
                            </label>
                        </div>
    
                        <div class="flex items-center justify-center">
                            <label class="w-full">
                                <twig:SelectSpeciality class="w-full p-2 border border-gray-300 rounded-md bg-white text-base outline-none">
                                    <option value="All" selected="selected">Spécialité</option>
                                </twig:SelectSpeciality>
                            </label>
                        </div>
    
                        <div class="flex items-center justify-center">
                            <input type="submit" value="Rechercher"
                                class="btn-form-submit cursor-pointer" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section class="flex flex-row">
        <div class="w-[1170px] mx-auto pt-[30px] pb-[0.5em]">
            <div class="clearfix">
                <div class="pane-block-22 float-left">
                    <div class="w-[800px] pl-[160px]">
                        <h2 class="text-[36px] mb-[9px] leading-[50px]">
                            <span><span class="text-[#5bb7df]">rempla</span><span class="text-[#b1b3b4]"><strong>clinic</strong></span></span>
                        </h2>
                        <p class="text-[22px] mb-[19px]">Présent à vos côtés depuis 2009 avec :</p>
                        <p class="text-[16px] mb-[19px]">
                            <span>Plus de <strong class="text-[20px]">200 cliniques partenaires</strong> proposant des remplacements
                                réguliers</span>
                        </p>
                        <p class="text-[16px] mb-[19px]">
                            <span>Plus de <strong class="text-[20px]">1200 cabinets médicaux</strong> demandeurs de remplaçants</span>
                        </p>
                        <p class="text-[16px] mb-[19px]">
                            Plus de <strong class="text-[20px]">300 offres de remplacements</strong> en temps
                            réel
                        </p>
                    </div>
                </div>
        
                <div class="float-left mb-[15px]">
                    <p class="text-center pl-[70px] mb-[19px]">Quelques références</p>
                    <div>
                        <img class="w-[300px] h-[170px] " src="{{ asset('images/sliders/clinea_new-bleu-rvb_002.jpg') }}"
                            alt="Clinéa" />
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="flex flex-row">
        <div class="w-[1170px] mx-auto mb-[50px]">
            <div class="clearfix">
                <div class="bg-[#eceded] w-[278px] p-[10px] border-[1px] border-solid border-[#d0d0d0] float-left">
                    <h2 class="text-[#666666] text-[15px] mb-4">
                        Derniers remplacements publiés
                    </h2>
        
                    {% for i in 1..4 %}
                    <div class="flex flex-row gap-3 mb-1 text-[#333333]">
                        <img src="{{ asset('images/sliders/Mme-remplacement.png') }}" alt="Image de Myriam L.">
                        <div>
                            <div class="font-bold">Myriam L.</div>
                            <div>Anesthésie-réanimation</div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
        
        
                <div class="w-[220px] float-left ml-[40px]">
                    <h2 class="pane-block-24 p-[20px_0_10px_65px] text-white text-[18px]">Infos utiles </h2>
                    <div class="bg-[#5bb7df] text-white p-[25px_10px_29px_15px]">
                        <p>
                            Que vous soyez remplacé ou remplaçant, pour un remplacement saisonnier ou régulier, retrouvez toutes
                            les informations utiles selon votre situation…<br>
                            <a href="{{ path('app_information_utile') }}" class="text-[#333333] underline">En savoir plus…</a>
                        </p>
                    </div>
                </div>
        
                <div class="w-[220px] float-left ml-[40px]">
                    <h2 class="pane-block-25 p-[20px_0_10px_65px] text-white text-[18px]">Protégez-vous !</h2>
                    <div class="bg-[#5bb7df] text-white p-[25px_10px_29px_15px]">
                        <p>
                            Quelles sont les assurances indispensables ? Sur quoi pouvez vous faire l’impasse.
                            <br> Tout est expliqué ici…<br>
                            Retrouvez les réponses de notre partenaire MACSF.
                            <br>
                            <a href="{{ path('app_protection') }}" class="text-[#333333] underline">En savoir plus…</a>
                        </p>
                    </div>
                </div>
        
        
                <div class="w-[258px] float-left ml-[38px] border-[1px] bg-[#eceded] border-solid border-[#d0d0d0] p-[20px] h-[242px]">
                    <div class="flex flex-col gap-6">
                        <h2 class="text-[#666666] text-[15px] mb-4">Nos références </h2>
                        <p>Merci pour toute l’aide que vous nous avez apportée</p>
                        <div>
                            <span class="text-[#9e9e9e]">Témoignage</span>
                            <div>Directrice</div>
                            <div>Clinique de l'Oseraie</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="flex flex-row bg-[#fcfcfc] border-t-[1px] border-t-solid border-t-[#ededed]">
        <div class="w-[1170px] mx-auto">
            <div class="w-[525px] mx-auto">
                <div class="clearfix">
                    <div class="partenaire-1 float-left">
                        <a target="_blank" href="http://www.macsf.fr/">
                            <img alt="" src="{{ asset('images/macsf-partenaire_0.png') }}">
                        </a>
                    </div>
                    <div class="btn-partenaires float-left">
                        <a href="/" class="text-[18px]">Découvrez <span class="block text-[#5ab0d5]">nos partenaires</span></a>
                    </div>
                    <div class="partenaire-2 float-left">
                        <a target="_blank" href="http://instalclinic.fr">
                            <img alt="" src="{{ asset('images/instaclinic-partenaire.png') }}"  class="w-[109px] h-[34px]">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{% endblock %}

{% block bodyjs %}
<script src="{{ asset('js/home-slider.js') }}"></script>
{% endblock %}